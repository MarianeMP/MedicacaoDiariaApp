<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicacaoDiariaApp.Views.EditarHorario"
             Title="Editar Horario">

    <VerticalStackLayout Padding="10" Spacing="15">

        <Label Text="Escolha o Medicamento:"/>
        <Picker x:Name="MedicamentoPicker"
                ItemDisplayBinding="{Binding Nome}"
                Title="Medicamento Selecionado"
                IsEnabled="False" />

        <Label Text="Dosagem:"/>
        <Entry x:Name="DosagemEntry"
               Placeholder="Exemplo: 1 comprimido"
               Keyboard="Numeric"
               Text="{Binding Dosagem}" />

        <Label Text="HorÃ¡rio:"/>
        <TimePicker x:Name="HorarioTimePicker"
                    Time="{Binding Horario.TimeOfDay, Mode=TwoWay}"
                    Format="HH:mm"/>

        <Button Text="Salvar"
                Clicked="OnSalvarClicked" />

    </VerticalStackLayout>

</ContentPage>