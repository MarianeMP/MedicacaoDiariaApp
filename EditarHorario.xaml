<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicacaoDiariaApp.Views.EditarHorario"
             Title="Editar Horário de Medicamento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            
            <Label Text="Medicamento" FontAttributes="Bold" />
            <Entry x:Name="MedicamentoEntry" IsEnabled="False" />

            
            <Label Text="Dosagem" FontAttributes="Bold" />
            <Entry x:Name="DosagemEntry" Placeholder="Ex: 500mg" />

            
            <Label Text="Horário" FontAttributes="Bold" />
            <TimePicker x:Name="HorarioTimePicker" />

            
            <Button Text="Salvar Alterações"
                    Clicked="OnSalvarAlteracoesClicked" 
                    BackgroundColor="#2196F3"   
                    TextColor="White"
                    CornerRadius="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
