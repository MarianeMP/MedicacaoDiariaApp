<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicacaoDiariaApp.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Aplicativo Medicação Diária" 
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20" />

            <Button Text="Entrar" 
                    Clicked="Button_Clicked" 
                    Margin="0,10" />

            <Button Text="Cadastrar Usuários" 
                    Clicked="Button_CadastrarUsuario_Clicked" 
                    Margin="0,10" />

            <Button Text="Visualizar Usuários" 
                    Clicked="Button_VisualizarUsuarios_Clicked" 
                    Margin="0,10" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
