<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicacaoDiariaApp.Views.EditarHorarioMedicamento"
             Title="Editar Horário Medicamento">
    <VerticalStackLayout Padding="10" Spacing="15">
        <Label Text="Nome do Medicamento:"/>
        <Entry x:Name="txt_nomeMed" IsReadOnly="True"></Entry>
        <Label Text="Horário de Administração:"/>
        <TimePicker x:Name="timePicker_horario" />

        <Button Text="Salvar Alterações" Clicked="Button_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>